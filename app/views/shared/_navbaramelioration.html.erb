
<!-- Wrapper -->
<div id="wrapper">

	<!-- script bouton facebook -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.2&appId=573461629761729&autoLogAppEvents=1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


<!-- Header Container
================================================== -->
<header id="header-container" class="fixed fullwidth">

	<!-- Header -->
	<div id="header" class="not-sticky">
		<div class="container">
			
			<!-- Left Side Content -->
			<div class="left-side">
				
				<!-- Logo -->
				<div id="logo">
					<a href="/"><%= image_tag "dodorando.png" %></a>
				</div>

				<!-- Mobile Navigation -->
				<div class="mmenu-trigger">
					<button class="hamburger hamburger--collapse" type="button">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
					</button>
				</div>

				<!-- Main Navigation -->
				<nav id="navigation" class="style-1">					
					<ul id="responsive">
						<li><a class="current" href="/">Accueil</a></li>
						<li><a href="/blog">Blog</a></li>
						<li><a href="#">FAQ</a></li>						
					</ul>
				</nav>
				<div class="clearfix"></div>
				<!-- Main Navigation / End -->
				
			</div>
			<!-- Left Side Content / End -->

			<!-- Right Side Content / End -->
			<div class="right-side">
				<div class="header-widget">

					<% if user_signed_in? %>
						<a href="/userprofils/1" class="sign-in popup-with-zoom-anim"><i class="sl sl-icon-user"></i> Mon Profil</a>						
					<% else %>
						<a href="#sign-in-dialog" class="sign-in popup-with-zoom-anim"><i class="sl sl-icon-login"></i> Connexion/Inscription</a>
					<% end %>	
				
				</div>
			</div>
			<!-- Right Side Content / End -->

			
			<!-- Sign In Popup -->
			<div id="sign-in-dialog" class="zoom-anim-dialog mfp-hide">

				<div class="small-dialog-header">
					<h3>Connexion</h3>
				</div>

				<!--Tabs -->
				<div class="sign-in-form style-1">

					<ul class="tabs-nav">
						<li><a href="#tab1">Connexion</a></li>
						<li><a href="#tab2">Inscription</a></li>

					</ul>

					<div class="tabs-container alt">

						<!-- Login -->
						<div class="tab-content" id="tab1" style="">							
						  <%= form_for(:user, :url => session_path(:user)) do |f| %>
							  <%= f.label :email %>                        
                <%= f.text_field :email, class: "input-text" %>

								<%= f.label :mot_de_passe %>
								<%= f.password_field :password, autocomplete: "current-password" %>

								<div class="lost_password">
                  <%= link_to "Mot de passe oublié ?", new_password_path(:user) ,class: "lost_password" %>
								</div>
								<br>								

								<%= f.submit 'Connexion', class: "button border margin-top-5" %>

						  <% end %>
						  	
						  <%= link_to "Connexion avec Facebook", user_facebook_omniauth_authorize_path, class: "button border margin-top-5"%>

						</div>

						<!-- Register -->
						<div class="tab-content" id="tab2" style="display: none;">
                          
              <%= form_for(:user, :url => registration_path(:user)) do |f| %>

                <%= f.label :prénom %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "prénom", class: "input-text" %>

                <%= f.label :nom %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "nom", class: "input-text" %>
							
							<%= f.label :email %>                        
                <%= f.text_field :email, class: "input-text" %>

							<%= f.label :mot_de_passe %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> lettres minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "input-text"%>

                <%= f.label :confirmation_du_mot_de_passe %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-text" %>

							<%= f.submit 'Se Connecter', class: "button border margin-top-5"  %>

							<% end %>
						</div>

					</div>
				</div>
			</div>
			<!-- Sign In Popup / End -->

		</div>
		</header>
	</div>
	<!-- Header / End -->
</header>

<div class="clearfix"></div>
<!-- Header Container / End -->